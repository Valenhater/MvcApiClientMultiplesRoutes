@model Empleado

<h1>Detalles del empleado</h1>

<p>
    <a asp-controller="Empleados" asp-action="Index" class="btn btn-outline-danger">
        Back to list
    </a>
</p>

<ul class="list-group">
    <li class="list-group-item">
        ID Empleado: @Model.IdEmpleado
    </li>
    <li class="list-group-item">
        Apellido: @Model.Apellido
    </li>
    <li class="list-group-item">
        Oficio: @Model.Oficio
    </li>
    <li class="list-group-item">
        Salario: @Model.Salario
    </li>
    <li class="list-group-item">
        ID Departamento: @Model.IdDepartamento
    </li>
</ul>